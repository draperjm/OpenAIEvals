{
    "image": "mcr.microsoft.com/devcontainers/miniconda:0-3",
    "name": "evals",
    "customizations": {
        "vscode": {
            "extensions": [
                "Alpha4.jsonl",
                "DavidAnson.vscode-markdownlint",
                "ms-python.black-formatter",
                "ms-python.isort",
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-toolsai.jupyter",
                "ms-vscode.makefile-tools",
                "mutantdino.resourcemonitor",
                "snowflake.snowflake-vsc",
                "VisualStudioExptTeam.intellicode-api-usage-examples",
                "VisualStudioExptTeam.vscodeintellicode-completions",
                "VisualStudioExptTeam.vscodeintellicode"
            ],
            "settings": {
                "[python]": {
                    "editor.codeActionsOnSave": {
                        "source.organizeImports": true
                    },
                    "editor.formatOnSave": true
                },
                "isort.args": [
                    "--line-length=100",
                    "--profile=black"
                ],
                "python.defaultInterpreterPath": "/opt/conda/bin/python",
                "python.formatting.blackArgs": [
                    "--line-length=100",
                    "--exclude=\"\""
                ],
                "python.formatting.blackPath": "/usr/local/py-utils/bin/black",
                "python.formatting.provider": "black",
                "python.linting.mypyEnabled": true,
                "python.linting.mypyPath": "/usr/local/py-utils/bin/mypy"
            }
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/git-lfs:1": {
            "version": "latest"
        },
        "ghcr.io/devcontainers/features/python:1": {
            "installJupyterlab": true,
            "installTools": true,
            "version": "os-provided"
        }
    },
    "onCreateCommand": "conda init bash && sudo cp .devcontainer/welcome-message.txt /usr/local/etc/vscode-dev-containers/first-run-notice.txt",
    "postCreateCommand": "/opt/conda/bin/python -m pip install -e .[dev]",
    "remoteUser": "vscode",
    "waitFor": "postCreateCommand"
}