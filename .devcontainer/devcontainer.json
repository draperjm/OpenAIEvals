{
    "image": "mcr.microsoft.com/devcontainers/python:0-3.9",
    "name": "evals",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "mutantdino.resourcemonitor",
                "snowflake.snowflake-vsc",
                "Alpha4.jsonl",
                "ms-toolsai.jupyter@2023.3.1000771902"
            ],
            "settings": {
                "[python]": {
                    "editor.codeActionsOnSave": {
                        "source.organizeImports": true
                    },
                    "editor.formatOnSave": true
                },
                "isort.args": [
                    "--line-length=100",
                    "--profile=black"
                ],
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "python.formatting.blackArgs": [
                    "--line-length=100",
                    "--exclude=\"\""
                ],
                "python.formatting.blackPath": "/usr/local/py-utils/bin/black",
                "python.formatting.provider": "black",
                "python.linting.mypyEnabled": true,
                "python.linting.mypyPath": "/usr/local/py-utils/bin/mypy"
            }
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/git-lfs:1": {
            "version": "latest"
        }
    },
    "onCreateCommand": "sudo cp .devcontainer/first-run-notice.txt /usr/local/etc/vscode-dev-containers/first-run-notice.txt",
    "updateContentCommand": "python3.9 -m pip install -e .[dev] && make"
}